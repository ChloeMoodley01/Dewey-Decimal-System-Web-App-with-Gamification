<Window x:Class="PROG7312_POE_ST10119385_ChloeMoodley.Status.Points"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PROG7312_POE_ST10119385_ChloeMoodley.Status"
        mc:Ignorable="d"
         Title="The Dewey Decimal Classification System" Height="772" Width="1106" ResizeMode="NoResize" WindowState="Maximized">
    <Grid Margin="10">

        <!--columns to spilt page-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--rows to spilt page-->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--color for heading (Microsoft, 2021)-->
        <Rectangle Grid.RowSpan="6" 
                   Grid.ColumnSpan="4">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#9E2A2B" Offset="0.25" />
                    <GradientStop Color="#335C67" Offset="0.65" />
                    <GradientStop Color="#E09F3E" Offset="0.95" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <TextBlock Text="POINTS" 
                   Grid.Row="0"
                   Grid.RowSpan="2"
                   Grid.Column="0"
                   Grid.ColumnSpan="4"
                   TextDecorations="Underline"
                   Foreground="#FFF3B0" 
                   FontFamily="Bahnschrift" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Left" 
                   FontSize="70"
                   Margin="200 0 0 50">
        </TextBlock>
        
        <Image 
            Grid.Row="0"
            Grid.RowSpan="6"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Height="400"
            Width="400"
            Margin="0 0 900 0" 
            Source="/Images/Points_Picture.png"/>

        <Label Content="Points Scored on The Last Game:" 
               Grid.Column="0"
               Grid.ColumnSpan="4"
               Grid.RowSpan="5"
               Grid.Row="0"
               FontSize="20" 
               Height="40" 
               HorizontalAlignment="left" 
               Margin="850 0 0 300"
               Foreground="#FFF3B0" />
        <TextBlock x:Name="lastGame"
                  Loaded="lastGame_Loaded"
                   Width="250"
                   Height="300"
                   Grid.Column="0"
                   Grid.ColumnSpan="4"
                   Grid.RowSpan="5"
                   Grid.Row="0"
                   Margin="500 50 0 0"
                   Background="#335C67"
                   Foreground="#FFF3B0">
        </TextBlock>

        <!--<Label Content="Total Points Scored on All Games:" 
               Grid.Column="0"
               Grid.ColumnSpan="4"
               Grid.RowSpan="5"
               Grid.Row="0"
               FontSize="20" 
               Height="40" 
               HorizontalAlignment="left" 
               Margin="1100 0 0 300"
               Foreground="#FFF3B0" />
        <TextBlock x:Name="overallGame"
                   Width="250"
                   Height="300"
                   Grid.Column="0"
                   Grid.ColumnSpan="4"
                   Grid.RowSpan="5"
                   Grid.Row="0"
                   Margin="1000 50 0 0"
                   Background="#335C67"
                   Foreground="Black">
        </TextBlock>-->

        <Label Content="If you Would Like to Play any of the Games Again, Press the Corresponding Button" 
               Grid.Column="0"
               Grid.ColumnSpan="4"
               Grid.RowSpan="6"
               Grid.Row="0"
               FontSize="25" 
               Height="50" 
               HorizontalAlignment="left" 
               Margin="300 450 0 0"
               Foreground="#FFF3B0" />

        <Label Content="If Not, Press Next" 
               Grid.Column="0"
               Grid.ColumnSpan="4"
               Grid.RowSpan="6"
               Grid.Row="0"
               FontSize="25" 
               Height="40" 
               HorizontalAlignment="left" 
               Margin="600 510 0 0"
               Foreground="#FFF3B0" />

        <!--button-->
        <Button Content="REPLACE" 
                x:Name="replace_again" 
                Background="#9E2A2B" 
                BorderBrush="#9E2A2B"
                BorderThickness="2"
                Foreground="#FFF3B0" 
                FontFamily="Arial" 
                Height="30"
                Width="150" 
                Margin="0 650 1000 0" 
                FontSize="20" 
                Grid.Column="0"
                Grid.Row="0"
                Grid.RowSpan="6"
                Grid.ColumnSpan="4"
                Click="replace_again_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>

        <!--button-->
        <!--(Stack Overflow, 2010)-->
        <!--Link: https://stackoverflow.com/questions/2906346/disable-button-in-wpf-->
        <Button Content="IDENTIFY" 
                x:Name="identify_again" 
                IsEnabled="False"
                Background="#9E2A2B" 
                BorderBrush="#9E2A2B"
                BorderThickness="2"
                Foreground="#FFF3B0" 
                FontFamily="Arial" 
                Height="30"
                Width="150" 
                Margin="0 650 400 0" 
                FontSize="20" 
                Grid.Column="0"
                Grid.Row="0"
                Grid.RowSpan="6"
                Grid.ColumnSpan="4"
                Click="identify_again_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>

        <!--button-->
        <!--(Stack Overflow, 2010)-->
        <!--Link: https://stackoverflow.com/questions/2906346/disable-button-in-wpf-->
        <Button Content="FIND" 
                x:Name="find_again" 
                IsEnabled="False"
                Background="#9E2A2B" 
                BorderBrush="#9E2A2B"
                BorderThickness="2"
                Foreground="#FFF3B0" 
                FontFamily="Arial" 
                Height="30"
                Width="150" 
                Margin="200 650 0 0" 
                FontSize="20" 
                Grid.Column="0"
                Grid.Row="0"
                Grid.RowSpan="6"
                Grid.ColumnSpan="4"
                Click="find_again_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>

        <!--button-->
        <Button Content="DashBoard" 
                x:Name="next_butt" 
                Background="#9E2A2B" 
                BorderBrush="#9E2A2B"
                BorderThickness="2"
                Foreground="#FFF3B0" 
                FontFamily="Arial" 
                Height="30"
                Width="150" 
                Margin="1000 650 0 0" 
                FontSize="20" 
                Grid.Column="0"
                Grid.Row="0"
                Grid.RowSpan="6"
                Grid.ColumnSpan="4"
                Click="next_butt_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>

    </Grid>
</Window>
