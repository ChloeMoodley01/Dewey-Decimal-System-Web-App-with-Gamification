<Window x:Class="PROG7312_POE_ST10119385_ChloeMoodley.Sign_In.DashBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PROG7312_POE_ST10119385_ChloeMoodley.Sign_In"
        mc:Ignorable="d"
        Title="The Dewey Decimal Classification System" Height="772" Width="1106" ResizeMode="NoResize" WindowState="Maximized">
    <Grid Margin="10">

        <!--columns to spilt page-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--rows to spilt page-->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--color for heading (Microsoft, 2021)-->
        <Rectangle Grid.RowSpan="6" 
                   Grid.ColumnSpan="4">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#9E2A2B" Offset="0.25" />
                    <GradientStop Color="#335C67" Offset="0.65" />
                    <GradientStop Color="#E09F3E" Offset="0.95" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <TextBlock Text="DASHBOARD" 
                   Grid.Row="0"
                   Grid.RowSpan="2"
                   Grid.Column="0"
                   Grid.ColumnSpan="4"
                   TextDecorations="Underline"
                   Foreground="#FFF3B0" 
                   FontFamily="Bahnschrift" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Left" 
                   FontSize="70"
                   Margin="200 20 0 0">
        </TextBlock>
        <Image 
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Height="100"
            Width="100"
            Margin="0 20 1240 0" 
            Source="/Images/Dash_Icon.png">

        </Image>

        <TextBlock x:Name="replace"
                   Width="300"
                   Height="300"
                   Grid.Column="0"
                   Grid.ColumnSpan="4"
                   Grid.RowSpan="5"
                   Grid.Row="0"
                   Margin="0 200 1000 0"
                   Background="#E09F3E"
                   Foreground="Black">
        </TextBlock>
        <TextBlock Text="REPLACE" 
                   Grid.Row="0"
                   Grid.RowSpan="6"
                   Grid.Column="0"
                   Grid.ColumnSpan="4"
                   TextDecorations="Underline"
                   Foreground="#FFF3B0" 
                   FontFamily="Bahnschrift" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Left" 
                   FontSize="25"
                   Margin="200 0 0 180">
        </TextBlock>
        <Image 
            Width="150"
            Height="150"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Grid.RowSpan="5"
            Margin="0 200 1000 0"
            Source="/Images/Dash_Replace.png" />
        <!--button-->
        <Button Content="REPLACE" 
                x:Name="replace_butt" 
                Background="#335C67" 
                BorderBrush="#335C67"
                BorderThickness="2"
                Foreground="#FFF3B0" 
                FontFamily="Arial" 
                Height="30"
                Width="200" 
                Margin="0 300 1000 0" 
                FontSize="20" 
                Grid.Row="0"
                Grid.Column="0"
                Grid.RowSpan="6"
                Grid.ColumnSpan="4"
                Click="replace_butt_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>

        <TextBlock x:Name="callnumbers"
                   Width="300"
                   Height="300"
                   Grid.Column="0"
                   Grid.ColumnSpan="4"
                   Grid.RowSpan="5"
                   Grid.Row="0"
                   Margin="50 200 0 0"
                   Background="#335C67"
                   Foreground="Black">
        </TextBlock>
        <TextBlock Text="FIND CALL NUMBER" 
                   Grid.Row="0"
                   Grid.RowSpan="6"
                   Grid.Column="0"
                   Grid.ColumnSpan="4"
                   TextDecorations="Underline"
                   Foreground="#FFF3B0" 
                   FontFamily="Bahnschrift" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Left" 
                   FontSize="25"
                   Margin="680 0 0 180">
        </TextBlock>
        <Image 
            Width="150"
            Height="150"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Grid.RowSpan="5"
            Margin="70 200 0 0" 
            Source="/Images/Dash_FindNumbers.png"/>
        
        <!--button-->
        <!--(Stack Overflow, 2010)-->
        <!--Link: https://stackoverflow.com/questions/2906346/disable-button-in-wpf-->
        <Button Content="FIND" 
                x:Name="find_butt" 
                Background="#9E2A2B" 
                BorderBrush="#9E2A2B"
                BorderThickness="2"
                Foreground="#FFF3B0" 
                FontFamily="Arial" 
                Height="30"
                Width="200" 
                Margin="50 300 0 0" 
                FontSize="20" 
                Grid.Column="0"
                Grid.Row="0"
                Grid.RowSpan="6"
                Grid.ColumnSpan="4"
                IsEnabled="True"
                Click="find_butt_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>

        <TextBlock x:Name="identify"
                   Width="300"
                   Height="300"
                   Grid.Column="0"
                   Grid.ColumnSpan="4"
                   Grid.RowSpan="5"
                   Grid.Row="0"
                   Margin="1000 200 0 0"
                   Background="#9E2A2B"
                   Foreground="Black">
        </TextBlock>
        <TextBlock Text="IDENTIFY" 
                   Grid.Row="0"
                   Grid.RowSpan="6"
                   Grid.Column="0"
                   Grid.ColumnSpan="4"
                   TextDecorations="Underline"
                   Foreground="#FFF3B0" 
                   FontFamily="Bahnschrift" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Left" 
                   FontSize="25"
                   Margin="1200 0 0 180">
        </TextBlock>
        <Image 
            Width="150"
            Height="150"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Grid.RowSpan="5"
            Margin="1000 200 0 0" 
            Source="/Images/Dash_Identify.png"/>
        
        <!--button-->
        <!--(Stack Overflow, 2010)-->
        <!--Link: https://stackoverflow.com/questions/2906346/disable-button-in-wpf-->
        <Button Content="IDENTIFY" 
                x:Name="identify_butt" 
                Background="#E09F3E" 
                BorderBrush="#E09F3E"
                BorderThickness="2"
                Foreground="#FFF3B0" 
                FontFamily="Arial" 
                Height="30"
                Width="200" 
                Margin="1000 300 0 0" 
                FontSize="20" 
                Grid.Column="0"
                Grid.Row="0"
                Grid.RowSpan="6"
                Grid.ColumnSpan="4"
                Click="identify_butt_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>

    </Grid>
</Window>
