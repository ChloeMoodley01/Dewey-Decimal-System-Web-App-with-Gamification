<Window x:Class="PROG7312_POE_ST10119385_ChloeMoodley.FindCallNumbers.FindCallNum"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PROG7312_POE_ST10119385_ChloeMoodley.Identify"
        mc:Ignorable="d"
        Title="The Dewey Decimal Classification System" Height="772" Width="1106" ResizeMode="NoResize" WindowState="Maximized" Background="#335C67">
    <Grid>
        <!--columns to spilt page-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--rows to spilt page-->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="FINDING THE CALL NUMBER" 
                   Grid.Row="0"
                   Grid.RowSpan="2"
                   Grid.Column="0"
                   Grid.ColumnSpan="4"
                   TextDecorations="Underline"
                   Foreground="#FFF3B0" 
                   FontFamily="Bahnschrift" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Left" 
                   FontSize="60"
                   Margin="400 0 0 50">
        </TextBlock>

        <TextBlock Text="PLEASE MATCH THIS CALL NUMBER TO THE CORRESPONDING DESCRIPTION" 
                   Grid.Row="0"
                   Grid.RowSpan="2"
                   Grid.Column="0"
                   Grid.ColumnSpan="4"
                   Foreground="#E09F3E" 
                   FontFamily="Bahnschrift" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Left" 
                   FontSize="30"
                   Margin="250 100 0 0">
        </TextBlock>

        <TextBox 
                 Grid.Row="0"
                 Grid.RowSpan="6"
                 Grid.Column="0"
                 Grid.ColumnSpan="4"
                 BorderThickness="3" 
                 BorderBrush="#E09F3E" 
                 Background="#9E2A2B"
                 Width="450"
                 Height="40"
                 Foreground="#FFF3B0"
                 FontSize="15"
                 Margin="550 0 0 330"
                 HorizontalAlignment="left"
                 x:Name="RandomlySelctedCallNum"/>

        <!--<TextBox 
                 Grid.Row="0"
                 Grid.RowSpan="6"
                 Grid.Column="0"
                 Grid.ColumnSpan="4"
                 BorderThickness="3" 
                 BorderBrush="#E09F3E" 
                 Background="#9E2A2B"
                 Width="450"
                 Height="40"
                 Foreground="#FFF3B0"
                 FontSize="15"
                 Margin="550 0 0 200"
                 HorizontalAlignment="left"
                 x:Name="RandomlySelctedCallNum1"/>-->

        <StackPanel x:Name="Level1"
                    Margin="80 350 0 0"
                    Grid.Column="0"
                    Grid.ColumnSpan="4"
                    Grid.RowSpan="6"
                    Grid.Row="0">

            <TextBlock Text="MATCH THE ENTRY ABOVE TO OPTIONS BELOW:" 
                   Grid.Row="0"
                   Grid.RowSpan="6"
                   Grid.Column="0"
                   Grid.ColumnSpan="4"
                   Foreground="#E09F3E" 
                   FontFamily="Bahnschrift" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Left" 
                   FontSize="20"
                   Margin="0 0 0 20">
            </TextBlock>

            <TextBox BorderThickness="3" 
                 BorderBrush="#9E2A2B" 
                 Background="#E09F3E"
                 Width="400"
                 Height="40"
                 Foreground="#FFF3B0"
                 FontSize="15"
                 Margin="0 0 0 0"
                 HorizontalAlignment="left"
                 x:Name="disCallNum1"/>
            <TextBox BorderThickness="3" 
                 BorderBrush="#9E2A2B" 
                 Background="#E09F3E"
                 Width="400"
                 Height="40"
                 Foreground="#FFF3B0"
                 FontSize="15"
                 Margin="0 0 0 0"
                 HorizontalAlignment="left"
                 x:Name="disCallNum2"/>
            <TextBox BorderThickness="3" 
                 BorderBrush="#9E2A2B" 
                 Background="#E09F3E"
                 Width="400"
                 Height="40"
                 Foreground="#FFF3B0"
                 FontSize="15"
                 Margin="0 0 0 0"
                 HorizontalAlignment="left"
                 x:Name="disCallNum3"/>
            <TextBox BorderThickness="3" 
                 BorderBrush="#9E2A2B" 
                 Background="#E09F3E"
                 Width="400"
                 Height="40"
                 Foreground="#FFF3B0"
                 FontSize="15"
                 Margin="0 0 0 0"
                 HorizontalAlignment="left"
                 x:Name="disCallNum4"/>

            <TextBlock Text="PLEASE PASTE THE CORRECT ANSWER BELOW:" 
                   Grid.Row="0"
                   Grid.RowSpan="6"
                   Grid.Column="0"
                   Grid.ColumnSpan="4"
                   Foreground="#E09F3E" 
                   FontFamily="Bahnschrift" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Left" 
                   FontSize="15"
                   Margin="50 10 0 0">
            </TextBlock>

            <TextBox BorderThickness="3" 
                 BorderBrush="#E09F3E" 
                 Background="#9E2A2B"
                 Width="400"
                 Height="40"
                 Foreground="#FFF3B0"
                 FontSize="15"
                 Margin="0 10 0 0"
                 HorizontalAlignment="left"
                 x:Name="callnumanswer"/>

            <Button Content="CHECK" 
                    x:Name="Check_butt"
                    Click="Check_butt_Click"
                    Background="#E09F3E" 
                    BorderBrush="#E09F3E"
                    BorderThickness="2"
                    Foreground="#FFF3B0" 
                    FontFamily="Arial" 
                    Height="50"
                    Width="100" 
                    Margin="0 10 760 0" 
                    FontSize="15" 
                    Grid.Column="0"
                    Grid.Row="0"
                    Grid.RowSpan="6"
                    Grid.ColumnSpan="4">
            </Button>
        </StackPanel>

        <StackPanel x:Name="Level2"
                    Margin="1050 350 0 0"
                    Grid.Column="0"
                    Grid.ColumnSpan="4"
                    Grid.RowSpan="6"
                    Grid.Row="0"
                    Visibility="Hidden">

            <TextBlock Text="MATCH THE ENTRY ABOVE TO OPTIONS BELOW:" 
                   Grid.Row="0"
                   Grid.RowSpan="6"
                   Grid.Column="0"
                   Grid.ColumnSpan="4"
                   Foreground="#E09F3E" 
                   FontFamily="Bahnschrift" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Left" 
                   FontSize="20"
                   Margin="0 0 0 20">
            </TextBlock>

            <TextBox BorderThickness="3" 
                 BorderBrush="#9E2A2B" 
                 Background="#E09F3E"
                 Width="400"
                 Height="40"
                 Foreground="#FFF3B0"
                 FontSize="15"
                 Margin="0 0 0 0"
                 HorizontalAlignment="left"
                 x:Name="LEV2CallNum1"/>
            <TextBox BorderThickness="3" 
                 BorderBrush="#9E2A2B" 
                 Background="#E09F3E"
                 Width="400"
                 Height="40"
                 Foreground="#FFF3B0"
                 FontSize="15"
                 Margin="0 0 0 0"
                 HorizontalAlignment="left"
                 x:Name="LEV2CallNum2"/>
            <TextBox BorderThickness="3" 
                 BorderBrush="#9E2A2B" 
                 Background="#E09F3E"
                 Width="400"
                 Height="40"
                 Foreground="#FFF3B0"
                 FontSize="15"
                 Margin="0 0 0 0"
                 HorizontalAlignment="left"
                 x:Name="LEV2CallNum3"/>
            <TextBox BorderThickness="3" 
                 BorderBrush="#9E2A2B" 
                 Background="#E09F3E"
                 Width="400"
                 Height="40"
                 Foreground="#FFF3B0"
                 FontSize="15"
                 Margin="0 0 0 0"
                 HorizontalAlignment="left"
                 x:Name="LEV2CallNum4"/>

            <TextBlock Text="PLEASE PASTE THE CORRECT ANSWER BELOW:" 
                   Grid.Row="0"
                   Grid.RowSpan="6"
                   Grid.Column="0"
                   Grid.ColumnSpan="4"
                   Foreground="#E09F3E" 
                   FontFamily="Bahnschrift" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Left" 
                   FontSize="15"
                   Margin="50 10 0 0">
            </TextBlock>

            <TextBox BorderThickness="3" 
                 BorderBrush="#E09F3E" 
                 Background="#9E2A2B"
                 Width="400"
                 Height="40"
                 Foreground="#FFF3B0"
                 FontSize="15"
                 Margin="0 10 0 0"
                 HorizontalAlignment="left"
                 x:Name="callnumanswer2"/>

            <Button Content="CHECK" 
                    x:Name="Check2_butt" 
                    Click="Check2_butt_Click"
                    Background="#E09F3E" 
                    BorderBrush="#E09F3E"
                    BorderThickness="2"
                    Foreground="#FFF3B0" 
                    FontFamily="Arial" 
                    Height="50"
                    Width="100" 
                    Margin="0 10 380 0" 
                    FontSize="15" 
                    Grid.Column="0"
                    Grid.Row="0"
                    Grid.RowSpan="6"
                    Grid.ColumnSpan="4">
            </Button>
        </StackPanel>

        <Button Content="EXIT" 
                x:Name="EXIT_button" 
                Click="EXIT_button_Click"
                Background="#FFF3B0" 
                BorderBrush="#FFF3B0"
                BorderThickness="2"
                Foreground="#335C67" 
                FontFamily="Arial" 
                Height="50"
                Width="300" 
                Margin="0 700 450 0" 
                FontSize="30" 
                Grid.Row="0"
                Grid.RowSpan="6"
                Grid.Column="0"
                Grid.ColumnSpan="4">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button Content="PLAY AGAIN" 
                x:Name="again_button" 
                Click="again_button_Click"
                Background="#FFF3B0" 
                BorderBrush="#FFF3B0"
                BorderThickness="2"
                Foreground="#335C67" 
                FontFamily="Arial" 
                Height="50"
                Width="300" 
                Margin="450 700 0 0" 
                FontSize="30" 
                Grid.Row="0"
                Grid.RowSpan="6"
                Grid.Column="0"
                Grid.ColumnSpan="4">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>

        <Image 
            Grid.Row="0"
            Grid.RowSpan="6"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Height="400"
            Width="400"
            Margin="20 100 0 0" 
            Source="/FindCallNumbers/quizzz.png"/>

